<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/menu_maps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_menu"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/add_report"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_add"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/search_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ser_titulo"
        android:textSize="8pt"
        android:textColor="@color/MyBrown"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp" />

    <Button
        android:id="@+id/btn_search_titulo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/procurar"
        android:textSize="6pt"
        android:textColor="@color/MyBrown"
        android:layout_below="@id/search_titulo"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="80dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

    </RelativeLayout>
</RelativeLayout>