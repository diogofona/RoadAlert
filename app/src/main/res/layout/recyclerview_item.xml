<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/MyGrayL"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AnotacaoTitulo"
        android:padding="10dp"
        android:textSize="10pt"
        android:textColor="@color/MyOrangeB" />

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/AnotacaoDescricao"
        android:layout_below="@id/AnotacaoTitulo"
        android:padding="5dp"
        android:textSize="6pt"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/MyGrayO" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AnotacaoAtualizada"
        android:padding="0dp"
        android:textSize="0pt"
        android:textColor="@color/MyGrayL" />

</RelativeLayout>