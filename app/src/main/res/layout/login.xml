<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/TopBar">

        <ImageView
            android:id="@+id/menu_login"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_menu"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/label_listagem_anotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@color/MyBrown"
            android:text="@string/titulo_LG"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/label_listagem_anotacoes"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="200dp"/>

            <TextView
                android:id="@+id/label_username"
                android:text="@string/campo_utilizador"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="7pt"
                android:textColor="@color/MyOrangeB"
                android:layout_below="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ET_username"
                android:hint="@string/campo_utilizador"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="7pt"
                android:textColor="@color/MyBrown"
                android:layout_below="@id/label_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/label_password"
                android:text="@string/campo_password"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="7pt"
                android:layout_below="@id/ET_username"
                android:textColor="@color/MyOrangeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ET_password"
                android:hint="@string/campo_password"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="7pt"
                android:textColor="@color/MyBrown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/label_password"/>

            <CheckBox
                android:id="@+id/checkRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lembrar"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:layout_below="@id/ET_password"
                android:textColor="@color/MyBrown"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_below="@id/checkRemember"
                android:layout_marginTop="20dp"
                android:text="@string/iniciarsessao"
                android:textSize="7pt"
                android:textColor="@color/MyWhite"
                android:textStyle="bold"
                android:backgroundTint="@color/MyOrangeB"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/registar"
                android:text="@string/registar"
                android:textColor="@color/MyOrangeO"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="7pt"
                android:layout_below="@id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="________"
                android:textColor="@color/MyOrangeO"
                android:layout_marginTop="-20dp"
                android:layout_centerHorizontal="true"
                android:textSize="7pt"
                android:layout_below="@id/registar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>